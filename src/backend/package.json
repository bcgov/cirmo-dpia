{
  "name": "dpia-backend",
  "version": "0.0.1",
  "description": "API for DPIA modernization projects",
  "author": "Kushal Arora",
  "private": true,
  "license": "ISC",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run migration:run && nest start",
    "start:dev": "npm run migration:run && nest start --watch",
    "start:debug": "npm run migration:run:no-build && nest start --debug --watch",
    "start:prod": "node dist/main",
    "precommit": "lint-staged",
    "prepare": "cd ../.. && husky install ./.husky",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" ",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js ",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/data-source.ts",
    "migration:run": "npm run build && npm run typeorm -- migration:run -d src/config/data-source.ts",
    "migration:run:no-build": "npm run typeorm -- migration:run -d src/config/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/data-source.ts",
    "migration:create": "npm run typeorm -- migration:create"
  },
  "dependencies": {
    "@nestjs/axios": "3.0.0",
    "@nestjs/class-validator": "0.13.4",
    "@nestjs/common": "10.2.7",
    "@nestjs/core": "10.2.7",
    "@nestjs/platform-express": "10.2.7",
    "@nestjs/swagger": "7.1.13",
    "@nestjs/typeorm": "10.0.0",
    "class-transformer": "0.5.1",
    "dotenv": "16.0.2",
    "express": "4.18.2",
    "keycloak-connect": "21.1.2",
    "marked": "5.1.2",
    "morgan": "1.10.0",
    "nest-keycloak-connect": "1.9.2",
    "pg": "8.11.3",
    "pug": "3.0.2",
    "puppeteer": "13.5.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "typeorm": "0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "10.1.18",
    "@nestjs/schematics": "10.0.2",
    "@nestjs/testing": "10.2.7",
    "@types/express": "4.17.19",
    "@types/jest": "29.5.5",
    "@types/marked": "4.0.7",
    "@types/node": "20.8.6",
    "@types/pug": "2.0.6",
    "@typescript-eslint/eslint-plugin": "6.9.0",
    "@typescript-eslint/parser": "6.8.0",
    "eslint": "8.51.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-prettier": "5.0.1",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "lint-staged": "14.0.1",
    "prettier": "3.0.3",
    "source-map-support": "0.5.21",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.2.2"
  },
  "jest": {
    "rootDir": ".",
    "roots": [
      "<rootDir>/test"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      [
        "lcov",
        {
          "projectRoot": "../../"
        }
      ]
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src",
      "test"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^test/(.*)$": "<rootDir>/test/$1"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "npm run lint"
    ],
    "*.{json,md,html,js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  }
}
